<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <!-- EditText para ingresar texto -->
    <EditText
        android:id="@+id/editTextInput"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Ingresa texto"
        android:padding="10dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Botón para crear el Fragment y actualizar el TextView -->
    <Button
        android:id="@+id/buttonCrearFragmento"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Crear Fragmento"
        android:onClick="onCrearFragmento"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/editTextInput"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Contenedor donde se insertará el Fragment -->
    <FrameLayout
        android:id="@+id/contenedor_fragment"
        android:layout_width="413dp"
        android:layout_height="808dp"
        android:background="#2196F3"
        app:layout_constraintTop_toBottomOf="@id/buttonCrearFragmento" />

</androidx.constraintlayout.widget.ConstraintLayout>
